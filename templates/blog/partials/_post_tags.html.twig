{% if not post.tags.empty %}
	<p class="post-tags">
		{% for tag in post.tags %}
			<a 
				href="{{ path('blog_index', {'tag': tag.name == app.request.query.get('tag') ? null : tag.name}) }}" 
				class="btn btn-sm btn-outline-{{ tag.name == app.request.query.get('tag') ? 'success' : 'secondary' }}"
			>
				<i class="bi bi-tag"></i>
				{{ tag.name }}
			</a>
		{% endfor %}
	</p>
{% endif %}
