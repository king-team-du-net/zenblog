{% if post.tags is not empty %}
	<ul class="aside-tags list-unstyled">
		{% for tag in post.tags %}
			<li>
				<a 
					href="{{ path('blog_index', {'tag': tag.slug == app.request.query.get('tag') ? null : tag.slug}) }}" 
					class="bg-{{ tag.slug == app.request.query.get('tag') ? 'success text-light border-0' : 'light' }}"
				>
					<i class="bi bi-tag"></i>
					{{ tag.name }}
				</a>
			</li>
		{% endfor %}
	</ul>
{% endif %}
