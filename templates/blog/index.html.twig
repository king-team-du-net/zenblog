{% extends 'layouts/blog.html.twig' %}

{% set pagetitle = 'Blog'|trans %}
{% block title pagetitle %}

{% block body %}
	<section>
		<div class="container">
			<div class="row">
				<div class="col-md-9" data-aos="fade-up">
					{% if category is defined %}
                        <h3 class="category-title">{{'Category'|trans}}: {{ category.name }}</h3>
                    {% endif %}

                    {% for post in pagination.results %}
                        {{ include('blog/partials/_post.html.twig') }}
                    {% else %}
                        <h3>{{'No posts found.'|trans}}</h3>
                    {% endfor %}

                    {{ include('blog/partials/_pagination.html.twig') }}
				</div>
				<div class="col-md-3">
                    {{ include("global/_sidebar.html.twig") }}
				</div>
			</div>
		</div>
	</section>
{% endblock %}
