<div class="text-center h5 mb-4">. . .</div>

<div class="row g-0 my-3">
    {% if previousPost %}
        <div class="col-sm-6 border p-3 p-md-4 position-relative rounded-start">
            <div class="d-flex align-items-center">
                <!-- Icon -->
                <div class="bg-primary bg-opacity-10 h-auto align-items-center d-flex align-self-stretch">
                    <i class="bi bi-chevron-compact-left fs-3 text-primary px-1"></i>
                </div>
                <!-- image -->
                <div class="col-3 d-none d-md-block">
                    <img src="{{ asset('uploads/post/' ~ previousPost.image) }}" alt="Image">
                </div>
                <!-- Title -->
                <div class="ms-3">
                    <h5 class="m-0">
                        <a href="{{ path('blog_show', { slug: previousPost.slug }) }}" class="stretched-link btn-link text-reset">{{ previousPost.title|html_excerpt(51) }}</a>
                    </h5>
                </div>
            </div>
        </div>
    {% endif %}
    {% if nextPost %}
        <div class="col-sm-6 border p-3 p-md-4 position-relative text-sm-end rounded-end">
            <div class="d-flex align-items-center">
                <!-- Title -->
                <div class="me-3">
                    <h5 class="m-0">
                        <a href="{{ path('blog_show', { slug: nextPost.slug }) }}" class="stretched-link btn-link text-reset">{{ nextPost.title|html_excerpt(51) }}</a>
                    </h5>
                </div>
                <!-- image -->
                <div class="col-3 d-none d-md-block">
                    <img src="{{ asset('uploads/post/' ~ nextPost.image) }}" alt="Image">
                </div>
                <!-- Icon -->
                <div class="bg-primary bg-opacity-10 h-auto align-items-center d-flex align-self-stretch">
                    <i class="bi bi-chevron-compact-right fs-3 text-primary px-1"></i>
                </div>
            </div>
        </div>
    {% endif %}
</div>