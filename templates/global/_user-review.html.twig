{% if showpost is defined %}
    <a href="{{ path('post', { slug : review.post.slug }) }}">
        <img src="" class="img-thumbnail img-100-100" /> {{ review.post.title }}
    </a>
{% endif %}

{% if showuser is defined %}
    {% if review.user.avatar is null %}
        <i class="bi bi-person-circle fs-4"></i>
    {% else %}
        <img class="avatar avatar-md rounded-circle float-start me-3" src="{{ asset('uploads/user/' ~ review.user.avatar) }}" alt="avatar">
    {% endif %}
    <div>
        <div class="d-flex justify-content-between mb-2">
            <div>
                <h5 class="m-0">{{ review.user.getFullName }}</h5>
                <span class="me-3 small">{{ review.createdat|ago }}</span>
            </div>
        </div>
        <span>{{ review.headline }}</span>
        <p class="mt-2 text-sm readmore" data-collapsed-height="200" data-height-margin="20">{{ review.details }}</p>
        <div class="rating-wrap mt-3">
            {{ include('global/_rating-stars.html.twig') }}
            <div class="label-rating">{{ review.getRating }} {{"rating.out-of-5-stars"|trans|lower}}</div>
        </div>
    </div>
{% endif %}
