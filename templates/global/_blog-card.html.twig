{% set link = path(post) %}
<!-- Card item START -->
<div class="card mb-4">
    <div class="row">
        <div class="col-md-5">
            <img class="rounded-3" src="{{ asset('uploads/post/' ~ post.image) }}" alt="{{ post.title }}">
        </div>
        <div class="col-md-7 mt-3 mt-md-0">
            {#
            {% if post.category %}
                <a href="javascript:void;" class="badge text-bg-{{ post.category.color }} mb-2">
                    <i class="fas fa-circle me-2 small fw-bold"></i>
                    {{ post.category.name }}
                </a>
            {% endif %}
            #}
            {% if post.category %}
                <a href="{{ path('blog_index', { category: post.category.slug }) }}" class="badge text-bg-{{ post.category.color }} mb-2">
                    <i class="fas fa-circle me-2 small fw-bold"></i>
                    {{ post.category.name }}
                </a>
            {% endif %}
            <h3>
                <a href="{{ link }}" class="btn-link stretched-link text-reset">{{ post.title|html_excerpt(30) }}</a>
            </h3>
            <p>{{ post.excerpt|html_excerpt(340) }}</p>
            <!-- Card info -->
            <ul class="nav nav-divider align-items-center d-none d-sm-inline-block">
                <li class="nav-item">
                    <div class="nav-link">
                        <div class="d-flex align-items-center position-relative">
                            <div class="avatar avatar-xs">
                                {% include "global/_avatar-user-blog.html.twig" with { post: post } only %}
                            </div>
                            <span class="ms-3">{{'label.by'|trans}}
                                <a href="javascript:void;" class="stretched-link text-reset btn-link">{{ post.author.nickname }}</a>
                            </span>
                        </div>
                    </div>
                </li>
                {% if showdate is defined %}
                    <li class="nav-item">{{ post.publishedAt|ago }}</li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
<!-- Card item END -->
