<div class="bg-light rounded p-3 p-md-4">
    <div class="d-flex mb-3">
        <!-- Avatar -->
        <a class="flex-shrink-0" href="javascript:void;">
            <div class="avatar avatar-xl border border-4 border-danger rounded-circle">
                {% include "global/_avatar-user-blog.html.twig" with { post: post } only %}
            </div>
        </a>
        <div class="flex-grow-1 ms-3">
            <span>{{'label.hello'|trans}}</span>
            <h3 class="mb-0">{{ post.author.nickname }}</h3>
            {% if post.author.designation %}
                <p>{{ post.author.designation }}</p>
            {% endif %}
        </div>
    </div>
    {% if post.author.about %}
        <p class="my-2 readmore" data-collapsed-height="150" data-height-margin="20">{{ post.author.about|raw|nl2br }}</p>
    {% endif %}
    <a href="javascript:void;" class="btn btn-danger-soft btn-sm ">{{'action.view-post'|trans}}</a>
</div>
