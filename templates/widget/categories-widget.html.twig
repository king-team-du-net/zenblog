{% for category in categories %}
    <div class="d-flex justify-content-between align-items-center bg-{{ category.color }} bg-opacity-15 rounded p-2 position-relative">
        <h6 class="m-0 text-{{ category.color }}">{{ category.name }}</h6>
        <a href="{{ path(category) }}" class="badge bg-{{ category.color }} text-dark stretched-link">{{ category.posts|length }}</a>
    </div>
{% endfor %}
