                                            <circle cx="11.5" cy="9.5" r="3" fill="white" stroke="white"></circle>
                                            <path d="M10 9H13V18L11.5 19L10 18V9Z" fill="white"></path>
                                            <path d="M12.5 8.5C12.5 9.05228 12.0523 9.5 11.5 9.5C10.9477 9.5 10.5 9.05228 10.5 8.5C10.5 7.94772 10.9477 7.5 11.5 7.5C12.0523 7.5 12.5 7.94772 12.5 8.5Z" class="x42ZoZlm9VYGazCSUyBE"></path>
