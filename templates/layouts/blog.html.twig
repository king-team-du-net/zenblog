{% extends 'layouts/base.html.twig' %}

{% block layout %}{{ parent() }} blog{% endblock %}

{% block body %}
    {{ include("global/_header.html.twig") }}
    <main id="main">
        {% if is_granted('ROLE_PREVIOUS_ADMIN') %}
            {% include "global/_message.html.twig" with { type: 'info', icon: 'ai-circle-info', message: ('You are connected as "%nickname%'|trans({'%nickname%' : app.user.nickname})~ '", <a href="'~ path('dashboard_index', {'_switch_user': '_exit'}) ~'">' ~ 'Click here'|trans ~ '</a> ' ~ 'to return to your dashboard'|trans) } %}
        {% endif %}

        {# {% include "global/_user-isverified.html.twig" with { user: app.user } %} #}

        {% block content %}
            <div class="row">
                <div class="col-md-9" data-aos="fade-up">
                    {% block main %}{% endblock %}
                </div>
                <div class="col-md-3">
                    {% block sidebar %}
                        {{ render_esi(controller('Symfony\\Bundle\\FrameworkBundle\\Controller\\TemplateController::templateAction', {
                            'template': 'blog/about.html.twig',
                            'sharedAge': 600,
                            '_locale': app.request.locale
                        })) }}

                        {{ include("global/_sidebar.html.twig") }}
                    {% endblock %}
                </div>
            </div>
        {% endblock %}
    </main>
    {{ include("global/_footer.html.twig") }}
{% endblock %}

