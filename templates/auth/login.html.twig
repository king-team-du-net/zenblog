{% extends 'layouts/blog.html.twig' %}

{% set pagetitle = 'Log in!'|trans %}
{% block title pagetitle %}

{% block body %}
    <section id="auth" class="auth mb-5">
        <div class="container flex-grow-1" data-aos="fade-up">
            <div class="row justify-content-center align-items-center h-100">
                <div class="col-12 col-md-9 col-lg-6 col-xl-5">
                    <div class="card border-0 shadow">
                        <div class="card-body p-5">
                            <h1 class="h3 fw-bold">{{ 'Please sign in'|trans }}</h1>
                            <span>{{ 'Welcome to'|trans }} {{ getSetting("website_name") }} ðŸ‘‹</span>
                            <div class="form mt-5">
                                <form action="{{ path('auth_login') }}" method="post" class="php-email-auth">
                                    {% if error %}
                                        {% component alert with {type: 'danger'} %}
                                            {% block body %}
                                                {{ error.messageKey|trans(error.messageData, 'security') }}
                                            {% endblock %}
                                        {% endcomponent %}
                                    {% endif %}
                                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                                    <div class="mb-3">
                                        <label for="_email" class="form-label">{{ 'Email'|trans }}</label>
                                        <input type="email" name="email" id="_email" class="form-control" value="{{ last_username }}" autocomplete="email" required autofocus>
                                    </div>
                                    <div class="mb-3">
                                        <label for="_password" class="form-label">{{ 'Password'|trans }}</label>
                                        <input type="password" name="password" id="_password" class="form-control" autocomplete="current-password" required>
                                    </div>
                                    <div class="mb-3 d-flex flex-column gap-2 gap-sm-0 flex-sm-row justify-content-sm-between">
                                        <div class="form-check">
                                            <input class="form-check-input" type="checkbox" name="_remember_me" value="" id="_remember_me" checked>
                                            <label class="form-check-label" for="_remember_me">
                                                {{ 'Remember me'|trans }}
                                            </label>
                                        </div>
                                        <a class="fw-bold" href="{{ path('auth_reset_password_request') }}">
                                            {{ 'Forgot your password?'|trans }}
                                        </a>
                                    </div>
                                    <div class="d-flex flex-column gap-2 align-items-center">
                                        <button type="submit" class="btn btn-primary btn-lg w-100 my-3">
                                            <i class="bi bi-arrow-right-square me-2"></i>
                                            {{ 'Sign in'|trans }}
                                        </button>
                                        <p>
                                            {{ 'No account yet?'|trans }} <a class="fw-bold" href="{{ path('auth_registration') }}">
                                                {{ 'Sign up'|trans }}
                                                <span class="bi bi-arrow-up-right-square"></span>
                                            </a>
                                        </p>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
