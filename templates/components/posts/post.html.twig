{% set link = path('blog_show', {slug: this.post.slug}) %}
<!-- Card item START -->
<div class="card mb-4">
    <div class="row">
        <div class="col-md-5">
            <img class="rounded-3" src="{{ asset('uploads/post/' ~ this.post.image) }}" alt="{{ this.post.title }}">
        </div>
        <div class="col-md-7 mt-3 mt-md-0">
            {% if this.post.category %}
                <a href="javascript:void;" class="badge text-bg-{{ this.post.category.color }} mb-2">
                    <i class="fas fa-circle me-2 small fw-bold"></i>
                    {{ this.post.category.name }}
                </a>
            {% endif %}
            <h3>
                <a href="{{ link }}" class="btn-link stretched-link text-reset">{{ this.post.title|html_excerpt(30) }}</a>
            </h3>
            <p>{{ this.post.excerpt|html_excerpt(340) }}</p>
            <!-- Card info -->
            <ul class="nav nav-divider align-items-center d-none d-sm-inline-block">
                <li class="nav-item">
                    <div class="nav-link">
                        <div class="d-flex align-items-center position-relative">
                            <div class="avatar avatar-xs">
                                {% if this.post.author.avatar is null %}
                                    <i class="bi bi-person-circle fs-4"></i>
                                {% else %}
                                    <img class="avatar-img rounded-circle" src="{{ asset('uploads/user/' ~ this.post.author.avatar) }}" alt="avatar">
                                {% endif %}
                            </div>
                            <span class="ms-3">{{'label.by'|trans}}
                                <a href="javascript:void;" class="stretched-link text-reset btn-link">{{ this.post.author.nickname }}</a>
                            </span>
                        </div>
                    </div>
                </li>
                {% if showdate is defined %}
                    <li class="nav-item">{{ this.post.publishedAt|ago }}</li>
                {% endif %}
            </ul>
        </div>
    </div>
</div>
<!-- Card item END -->
