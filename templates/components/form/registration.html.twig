<div {{ attributes }}>
    {{ form_start(form) }}
    {{ form_row(form.email) }}
    {{ form_row(form.nickname) }}
    {{ form_row(form.plainPassword) }}

    <div class="d-flex flex-column gap-2 align-items-center">
        <button type="submit" class="btn btn-primary btn-lg w-100 my-3">
            <i class="bi bi-arrow-up-right-square me-2"></i>
            {{ 'action.sign_up'|trans }}
        </button>
        <p>
            {{ 'action.already_registered'|trans }} <a class="fw-bold" href="{{ path('auth_login') }}">
                {{ 'action.sign_in'|trans }}
                <span class="bi bi-arrow-right-square"></span>
            </a>
        </p>
    </div>
    {{ form_end(form) }}
</div>
