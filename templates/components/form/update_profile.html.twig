<div {{ attributes }}>
    {{ form_start(form) }}
        <!-- Nickname -->
        <div class="mb-3">
            {{ form_row(form.nickname) }}
        </div>
        <!-- Email -->
        <div class="mb-3">
            {{ form_row(form.email) }}
        </div>
        <!-- Firstname -->
        <div class="mb-3">
            {{ form_row(form.firstname) }}
        </div>
        <!-- Lastname -->
        <div class="mb-3">
            {{ form_row(form.lastname) }}
        </div>
        <!-- Button -->
        <div class="row align-items-center">
            <div class="col-sm-4">
                <button type="submit" class="btn btn-success">{{ 'action.edit'|trans }}</button>
            </div>
            <div class="col-sm-8 text-sm-end"></div>
        </div>
    {{ form_end(form) }}
</div>
