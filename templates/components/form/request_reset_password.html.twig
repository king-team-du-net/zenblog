<div {{ attributes }}>
    {{ form_start(form) }}
    {{ form_row(form.user) }}
    <div class="d-flex flex-column gap-2 align-items-center">
        <button type="submit" class="btn btn-primary btn-lg w-100 my-3">
            <i class="bi bi-arrow-repeat me-2"></i>
            {{ 'action.reset'|trans }}
        </button>
        {% if getSetting('users_can_register') == "yes" %}
            <p>
                {{ 'action.no_account_yet'|trans }} <a class="fw-bold" href="{{ path('auth_registration') }}">
                    {{ 'action.sign_up'|trans }}
                    <span class="bi bi-arrow-up-right-square"></span>
                </a>
            </p>
        {% endif %}
    </div>
    {{ form_end(form) }}
</div>
