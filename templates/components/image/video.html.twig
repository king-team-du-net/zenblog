{% if video.provider.name == 'Youtube' %}
    <iframe width="100%" height="100%" class="bg-black" src="https://www.youtube.com/embed/{{ video.provider.id(video.url) }}" title="YouTube video player" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
{% elseif video.provider.name =='Dailymotion' %}
    <iframe width="100%" height="100%" class="bg-black" type="text/html" src="https://www.dailymotion.com/embed/video/{{ video.provider.id(video.url) }}" allowfullscreen > </iframe>
{% elseif video.provider.name =='Vimeo' %}
    <iframe width="100%" height="100%" class="bg-black" src="https://player.vimeo.com/video/{{ video.provider.id(video.url) }}" allow="autoplay; fullscreen; picture-in-picture" allowfullscreen></iframe>
{% endif %}
