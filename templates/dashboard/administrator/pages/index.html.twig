{% extends 'layouts/dashboard.html.twig' %}

{% set pagetitle = 'title.administrator_page_index'|trans %}
{% block title pagetitle %}

{% block breadcrumb %}
	{% set breadcrumb = [{"dashboard_index": ('title.dashboard'|trans), "current": (pagetitle)}] %}
    {% include "global/_breadcrumb.html.twig" with breadcrumb %}
{% endblock %}

{% block content %}
    {#
    <div class="box shadow-none bg-gray mb-4">
        <div class="row">
            <div class="col-sm-12 col-lg-6 text-center text-lg-start mb-3 mb-lg-0">
                <span class="center-lg-y text-center text-muted">
                    {{ 'resultsCount'|trans({ 'count': pages.getTotalItemCount }) }}
                </span>
            </div>

            <div class="col-sm-12 col-lg-6 text-center text-lg-end">
                <a href="{{ path('dashboard_administrator_page_add') }}" class="btn btn-primary ms-3" data-bs-toggle="tooltip" title="{{'action.create'|trans}}"><i class="bi bi-plus"></i></a>
            </div>
        </div>
    </div>
    #}

    <div class="row pb-4">
        <div class="col-12">
            <div class="d-sm-flex justify-content-sm-between align-items-center">
                <h1 class="mb-2 mb-sm-0 h6">
                    {{ 'resultsCount'|trans({ 'count': pages.getTotalItemCount }) }}
                </h1>			
                <a href="{{ path('dashboard_administrator_page_add') }}" class="btn btn-sm btn-primary mb-0"><i class="bi bi-plus me-2"></i>{{'action.create'|trans}}</a>
            </div>
        </div>
    </div>

    {% if pages.getTotalItemCount > 0 %}
        <div class="row g-4">
            <div class="col-12">
                <div class="card border bg-transparent rounded-3">
                    <div class="card-body py-3">
                        <div class="table-responsive border-0">
                            <table class="table p-4 mb-0 table-shrink">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col" class="border-0 rounded-start">{{ 'label.title'|trans }}</th>
                                        <th scope="col" class="border-0">{{ 'label.slug'|trans }}</th>
                                        <th scope="col" class="border-0">{{ 'label.link'|trans }}</th>
                                        <th scope="col" class="border-0 rounded-end text-center"><i class="bi bi-gear"></i></th>
                                    </tr>
                                </thead>
                                <tbody class="border-top-0">
                                    {% for page in pages %}
                                        <tr>
                                            <td>
                                                {{ page.title }}
                                            </td>
                                            <td>
                                                {{ page.slug }}
                                            </td>
                                            <td>
                                                <a href="{{ path('page', { slug : page.slug }) }}" target="_blank">{{ path('page', { slug : page.slug }) }}</a>
                                            </td>
                                            <td class="text-center">
                                                <div class="item-action dropdown">
                                                    <a href="javascript:void(0);" class="btn btn-light btn-round mb-0" role="button" id="dropdownAction" data-bs-toggle="dropdown" aria-expanded="false">
                                                        <i class="bi bi-three-dots fa-fw"></i>
                                                    </a>
                                                    <div class="dropdown-menu dropdown-w-sm dropdown-menu-end min-w-auto shadow rounded" aria-labelledby="dropdownAction">
                                                        <li>
                                                            <a class="dropdown-item" href="{{ path('dashboard_administrator_page_edit', { slug : page.slug }) }}">
                                                                <i class="bi bi-pencil-square fa-fw me-2"></i>
                                                                {{ 'action.edit'|trans }}
                                                            </a>
                                                        </li>
                                                        <li>
                                                            <a class="dropdown-item text-danger requires-confirmation" data-target="" href="{{ path('dashboard_administrator_page_delete', { slug : page.slug }) }}" data-confirmation-text="{{ "action.delete_page_confirmation"|trans }}">
                                                                <i class="bi bi-trash fa-fw me-2"></i>
                                                                {{ "action.deletedAt"|trans }}
                                                            </a>
                                                        </li>
                                                    </div>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
                {{ knp_pagination_render(pages, null, {}, {'align': 'center'}) }}
            </div>
        </div>
    {% else %}
        {% include "global/_message.html.twig" with { type: "info", message: ('page.no_pages_found'|trans), icon: "bi bi-exclamation-circle" } %}
    {% endif %}
{% endblock %}
