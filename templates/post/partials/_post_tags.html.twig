
{% if post.tags is not empty %}
	<ul class="list-inline mb-0">
		{% for tag in post.tags %}
			<li class="list-inline-item">
				<a 
					href="{{ path('blog', {'tag': tag.slug == app.request.query.get('tag') ? null : tag.slug}) }}" 
					class="btn btn-sm btn-outline-{{ tag.color }}"
				>
					<i class="bi bi-tag"></i>
					{{ tag.name }}
				</a>
			</li>
		{% endfor %}
	</ul>
{% endif %}

